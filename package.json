{
  "name": "openanime",
  "version": "1.0.4",
  "main": "main.js",
  "description": "OpenAnime için geliştirilmiş, resmi olmayan (unofficial), yerel WebGPU destekli Linux istemcisi.",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.openanime.app",
    "productName": "OpenAnime",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video",
      "icon": "icon512.png"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon512.png",
      "screenshots/",
      "package.json",
      "!flatpak-node",
      "!packaging",
      "!venv",
      "!flatpak-builder-tools"
    ],
    "asar": true
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12"
  }
}